{
    "name": "backend",
    "version": "1.0.0",
    "description": "Backend API server",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "db:generate": "prisma generate --schema=./database/schema.prisma",
        "db:push": "prisma db push --schema=./database/schema.prisma",
        "db:migrate": "prisma migrate dev --schema=./database/schema.prisma",
        "db:studio": "prisma studio --schema=./database/schema.prisma"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "@prisma/client": "^5.7.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "prisma": "^5.7.1"
    }
}